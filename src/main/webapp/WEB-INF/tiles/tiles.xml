<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>

    <!-- login layout -->
    <definition name="login" template="/WEB-INF/layout/login.jsp">		
     </definition>
    
    <!--// main layout -->
	<definition name="mainTemplate" template="/WEB-INF/layout/main.jsp">
		<put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
		<put-attribute name="left" value="/WEB-INF/layout/left.jsp" />
		<put-attribute name="top" value="/WEB-INF/layout/top.jsp" />
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
		<put-attribute name="right"  value="/WEB-INF/layout/right.jsp"/>
	</definition>
	
	<!-- 각 view 호출 -->
	 <definition name="*/*" extends="mainTemplate">
		<put-attribute name="right" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition> 
	
	<!--// popup layout -->
    <definition name="*/*/popup" template="/WEB-INF/views/{1}/{2}.jsp">		
    </definition>
	
    
</tiles-definitions>