<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.iQratorPlus.database.mapper.ModelMapper">
    
    <!-- SQL조회 쿼리 -->
    <select id="selectTableList" resultType="kr.co.iQratorPlus.model.domain.TableVO">
    	SELECT
    		TABLE_NAME
    	FROM
    		USER_TABLES
    	ORDER BY
    		TABLE_NAME ASC
    </select>
    
    <select id="selectTableInfo" parameterType="kr.co.iQratorPlus.model.domain.TableVO" resultType="kr.co.iQratorPlus.model.domain.TableVO">
    	SELECT 
    		COLUMN_NAME
    		,DATA_TYPE
    		,NULLABLE
		FROM
			USER_TAB_COLUMNS
		WHERE
			1=1
		AND
			TABLE_NAME = #{tableName}
    </select>
    <!-- SQL조회 쿼리 -->
	
	
</mapper>


